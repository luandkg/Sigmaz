
require "sigmaz.sigmaz";

call iniciar -> operando();


act operando(){



    moc PARAR : num = 10;
    moc PASSO : num = 1;

    moc MSG_PAR : string = " : PAR ";
    moc MSG_IMPAR : string = " : IMPAR ";

    step def numero : num :: (0,PARAR,somar_inteiro(numero,PASSO)) -> {

        def resto : num = resto_inteiro(numero,2);


        if (resto == 0) -> {  println(numero,MSG_PAR);  }
        if (resto == 1) -> {  println(numero,MSG_IMPAR); }



    }

     def numero : num = 12;


}


